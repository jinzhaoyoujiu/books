<div>
    <div ng-app="booksApp">
        <section ng-controller="getBooks" ng-init="getAllBooks()">
            <div>
                <ul>
                    <li>
                        <button ng-click="GetBooksByGenre('a')">GetBooksByGenre</button>
                        <button ng-click="GetBooksByAuthor(1)">GetBooksByAuthor</button>
                        <button ng-click="GetBooksByDate('2018/12/12')">GetBooksByDate</button>
                    </li>
                </ul>
            </div>
            <div>
                <table>
                    <thead>
                        <tr>
                            <th>title</th>
                            <th>author</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="book in books">
                            <td>{{book.title}}</td>
                            <td>{{book.author}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <input id="bookId" ng-bind="bookID" /><button ng-click="getBook(1)">查询</button>
                <span>{{book.title}}</span>
            </div>
            
        </section>
    </div>
</div>
